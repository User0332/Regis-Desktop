{
	"$schema": "http://json-schema.org/draft-04/schema",
	"description": "Digital Planner JSON Data File",
	"properties": {
		"assignments": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"date": {
						"type": "string",
						"description": "the date of the event/assignment"
					},
					"description": {
						"type": "string",
						"description": "A short description of the event/assignment"
					}
				}
			},
			"description": "An array of events/assignments"
		},
		"notes": {
			"type": "array",
			"items": {
				"type": "string",
				"description": "A note!"
			},
			"description": "Additional notes to fill in the notes section of the planner"
		},
		"name": {
			"type": "string",
			"description": "The display name of the planner"
		}
	}
}